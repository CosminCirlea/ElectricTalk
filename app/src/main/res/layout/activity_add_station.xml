<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddStationActivity">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:src="@drawable/ic_top_sigla"
        android:scaleType="centerCrop"
        />

    <include layout="@layout/toolbar_with_back_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon">

    <EditText
        android:id="@+id/et_add_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@+id/toolbar_with_back_button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColor="@color/colorText"
        android:backgroundTint="@color/colorGray"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="36dp"/>

    <EditText
        android:id="@+id/et_add_station_total_sockets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total sockets"
        android:layout_below="@+id/et_add_station_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColor="@color/colorText"
        android:backgroundTint="@color/colorGray"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:id="@+id/et_add_station_free_sockets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Free sockets"
        android:layout_below="@+id/et_add_station_total_sockets"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColor="@color/colorText"
        android:backgroundTint="@color/colorGray"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:id="@+id/et_add_station_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_below="@+id/et_add_station_free_sockets"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:textSize="22sp"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColor="@color/colorText"
        android:backgroundTint="@color/colorGray"
        android:layout_marginBottom="6dp"/>

    <Button
        android:id="@+id/btn_add_station"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:onClick="addStation"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="24sp"
        android:text="Add station"
        android:padding="6dp"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorGray"
        />
    </RelativeLayout>
</RelativeLayout>